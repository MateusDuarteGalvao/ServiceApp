<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.NovoServicoPrestadorActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="16dp">

        <EditText
            android:id="@+id/editServicoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/borda_redonda" />

        <EditText
            android:id="@+id/editServicoDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Descrição"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/borda_redonda" />

        <EditText
            android:id="@+id/editServicoPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Valor"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/borda_redonda" />

        <Button
            android:id="@+id/buttonSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Salvar"
            android:textColor="@color/white"
            android:theme="@style/botaoPadrao"
            android:elevation="5dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/borda_bottom"
            android:onClick="validarDadosServico"/>

    </LinearLayout>

</LinearLayout>